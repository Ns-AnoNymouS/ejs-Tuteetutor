{
    "version": 2,
    "builds": [
        {
            "src": "public/**/*",
            "use": "@vercel/static"
        },
        {
            "src": "controller.js",
            "use": "@vercel/node"
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)/(.*)",
            "destination": "public/$1/$2"
        },
        {
            "source": "/(.*)",
            "destination": "bin/www"
        }
    ]
}